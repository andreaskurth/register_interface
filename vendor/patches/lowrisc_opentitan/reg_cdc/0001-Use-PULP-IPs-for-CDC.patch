From: Michael Rogenmoser <michael@rogenmoser.us>
Date: Mon, 17 Jul 2023 19:41:36 +0200
Subject: [PATCH] Use PULP IPs for CDC

---
 prim_reg_cdc.sv | 16 ++++++++--------
 1 file changed, 8 insertions(+), 8 deletions(-)

diff --git a/prim_reg_cdc.sv b/prim_reg_cdc.sv
index f323100b5..cd1c9281d 100644
--- a/prim_reg_cdc.sv
+++ b/prim_reg_cdc.sv
@@ -12,7 +12,7 @@
 // If in the future this assumption changes, we can modify this module easily to
 // support the new behavior.
 
-`include "prim_assert.sv"
+`include "common_cells/assertions.svh"
 
 module prim_reg_cdc #(
   parameter int DataWidth = 32,
@@ -154,13 +154,13 @@ module prim_reg_cdc #(
 
   // the software transaction is pulse synced across the domain.
   // the prim_reg_cdc_arb module handles conflicts with ongoing hardware updates.
-  prim_pulse_sync u_src_to_dst_req (
-    .clk_src_i,
-    .rst_src_ni,
-    .clk_dst_i,
-    .rst_dst_ni,
-    .src_pulse_i(src_req),
-    .dst_pulse_o(dst_req_from_src)
+  edge_propagator u_src_to_dst_req (
+    .clk_tx_i (clk_src_i),
+    .rstn_tx_i(rst_src_ni),
+    .edge_i   (src_req),
+    .clk_rx_i (clk_dst_i),
+    .rstn_rx_i(rst_dst_ni),
+    .edge_o   (dst_req_from_src)
   );
 
   prim_reg_cdc_arb #(
