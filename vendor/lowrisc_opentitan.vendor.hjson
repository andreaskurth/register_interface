{
  name: "lowrisc_opentitan",
  target_dir: "lowrisc_opentitan"

  upstream: {
    url: "https://github.com/lowRISC/opentitan.git",
    rev: "master",
  },

  patch_dir: "patches/lowrisc_opentitan",

  mapping: [
      {from: 'util/', to: 'util/', patch_dir: 'util'}
